@model Vreme.Models.data

@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    /*N, NNE, NE, ENE, E, ESE, SE, SSE, S, SSW, SW, WSW, W, WNW, NW, NNW, VRB*/
    .N {
        background-color: Highlight;
    }

    .NNE {
        background-color: aquamarine;
    }

    .NE {
        background-color: aquamarine;
    }

    .E {
        background-color: forestgreen;
    }

    .ENE {
        background-color: lightseagreen;

    }
    .ESE {
        background-color: lightseagreen;
    }

    .S {
        background-color: yellow;
    }

    .SSE {
        background-color: yellowgreen;
    }

    .SE {
        background-color: yellowgreen;
    }

    .SSW {
        background-color: palevioletred;
    }

    .SW {
        background-color: palevioletred;
    }

    .WSW {
        background-color: mediumvioletred;
    }

    .W {
        background-color: darkviolet;
    }

    .WNW {
        background-color: blueviolet;
    }

    .NW {
        background-color: slateblue;
    }

    .NNW {
        background-color: slateblue;
    }
</style>

<div class="container">
    <h1>ARSO <span class="badge @Model.metData.ElementAt(0).dd_icon" style="border:1px solid black;color:black">Smer vetra</span></h1>
    <table class="table table-hover" style="background-color:rgba(255, 255, 255, 0.55);border:2px solid black;border-radius:2px">
        <tr>
            <th>
                Čas
            </th>
            <th>
                Smer vetra
            </th>
            <th>
                Temperatura
            </th>
            <th>
                Vlaga
            </th>
        </tr>
        @foreach (var d in Model.metData)
        {
            @*<tr class="@d.dd_icon">*@
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => d.valid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => d.dd_icon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => d.tavg)°C
                </td>
                <td>
                    @Html.DisplayFor(modelItem => d.rhavg)%
                </td>
            </tr>
        }
    </table>
</div>